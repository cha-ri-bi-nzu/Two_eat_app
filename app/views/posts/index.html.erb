<header>
  <h1>TwoEat</h1>
</header>

<body>
  <h2>TwoEat一覧</h2>
  <p><%= notice %></p>

  <table>
    <tr>
      <th>皆のTwoEat</th>
    </tr>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.content %></td>
        <td><%= link_to '開く', post_path(post.id) %></td>
        <td><%= link_to '書き直し', edit_post_path(post.id) %></td>
        <td><%= link_to '消す', post_path(post.id), method: :delete, data: { confirm: 'ホントに消して大丈夫？' } %></td>
      </tr>
    <% end %>
  </table>

  <br>
  <%= link_to 'とぅぶやく', new_post_path %>
</body>

<footer>
  <h6><%= link_to "TwoEat", posts_path %></h6>
</footer>
